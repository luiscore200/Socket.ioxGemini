{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "./public",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "sourceMap": true,
    "lib": ["ES2020", "DOM"],
    "types": ["socket.io-client"],
    "noEmit": false,
    "allowJs": true,
    "isolatedModules": true
  },
  "include": ["src/client.ts"],
  "exclude": ["node_modules"]
} 